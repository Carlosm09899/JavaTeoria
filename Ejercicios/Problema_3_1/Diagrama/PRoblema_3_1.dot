digraph Problema_3_1 {
    // ConfiguraciÃ³n
    graph [bgcolor="transparent"];
    node [shape=rect, fontname="Arial", margin="0.1,0.1"];
    edge [fontname="Arial", fontsize=10];

    // Nodos
    INICIO [shape=ellipse, label="INICIO"];
    INICIALIZAR [label="sumaImpares = 0\nsumaPares = 0\nconteoPares = 0"];
    LEER_N [shape=parallelogram, label="Leer cantidadNumeros"];
    BUCLE_FOR [shape=diamond, label="Para i desde 0\nhasta cantidadNumeros-1"];
    LEER_NUM [shape=parallelogram, label="Leer numero"];
    COND_CERO [shape=diamond, label="numero != 0"];
    COND_PAR [shape=diamond, label="numero % 2 == 0"];
    PROCESO_PAR [label="sumaPares += numero\nconteoPares++"];
    PROCESO_IMPAR [label="sumaImpares += numero"];
    COND_DIV_CERO [shape=diamond, label="conteoPares > 0"];
    CALC_PROM [label="promedioPares = sumaPares / conteoPares"];
    PROM_CERO [label="promedioPares = 0"];
    IMPRIMIR [shape=egg, label="Escribir sumaImpares,\npromedioPares"];
    FIN [shape=ellipse, label="FIN"];

    // Conexiones
    INICIO -> INICIALIZAR -> LEER_N -> BUCLE_FOR;
    BUCLE_FOR -> LEER_NUM [label="Repetir"];
    LEER_NUM -> COND_CERO;
    COND_CERO -> BUCLE_FOR [label="No (es cero)"];
    COND_CERO -> COND_PAR [label="Si"];
    COND_PAR -> PROCESO_PAR [label="Si"];
    COND_PAR -> PROCESO_IMPAR [label="No"];
    PROCESO_PAR -> BUCLE_FOR; 
    PROCESO_IMPAR -> BUCLE_FOR;
    BUCLE_FOR -> COND_DIV_CERO [label="Fin Bucle"];
    COND_DIV_CERO -> CALC_PROM [label="Si"];
    COND_DIV_CERO -> PROM_CERO [label="No"];
    CALC_PROM -> IMPRIMIR; 
    PROM_CERO -> IMPRIMIR;
    IMPRIMIR -> FIN;
}
